{
    "extends": "airbnb",
    "env": {
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
	    "ecmaFeatures": {
	        "jsx": true,
	        "modules": true
	    }
		},
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
      "arrow-body-style": 0,
      "linebreak-style": 0,
      "max-len": ["error", 120],
      "react/prop-types": 0,
      "react/no-string-refs": 0,
      "react/no-find-dom-node": 0,
      "react/prefer-stateless-function": 0,
      "prefer-template": 0,
      "no-alert": 0
    }
}